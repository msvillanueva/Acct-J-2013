@{
    Layout = null;
}

@model List<Web.Models.CActionRoute>

<ul class="navigation widget">
    @foreach (var r in Model)
    {
        if (r.ChildrenCount > 0)
        {
            <li>
                <a href="#" title="" class="expand">
                    <i class='@r.Icon'></i>@r.Description
                    <strong>@r.ChildrenCount</strong>
                </a>
                <ul>
                    @foreach (var c in r.Children)
                    {
                        <li>
                            <a href="@Url.Action(c.Action, c.Controller)" title="">@c.Description</a>
                        </li>
                    }
                </ul>
            </li>
        }
        else
        {
            <li>
                <a href="@Url.Action(r.Action, r.Controller)" title="">
                    <i class='@r.Icon'></i>@r.Description
                </a>
            </li>
        }
    }
</ul>

